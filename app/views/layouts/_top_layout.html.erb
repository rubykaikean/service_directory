<div class="row-fluid header_bar navbar navbar-fixed-top main-theme"><!-- start header -->
    <div class="navbar-inner">
      <div class="container-fluid">        
        <div class="nav-collapse pull-right">
          <ul class="nav nav-pills">
            <li><a href="<%= root_url %>">Home</a></li>
            <% if user_signed_in? %>
              <% if current_user.is_admin == true %>
                <li><a href="<%= locations_path %>">Service Location</a></li>
                <li><a href="<%= categories_path %>">Services Category</a></li>
              <% end %>
                <% if current_user.user_type == 1 %>
                  <li>
                    <%= link_to "Company Profile", company_path(current_user.id) %>
