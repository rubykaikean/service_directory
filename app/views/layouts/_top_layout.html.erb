                <% else %>
                  <li>
                    <%= link_to "Personal Profile" %>
                  </li>
                <% end %>
              <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
              <li><%= current_user.email %></li>
            <% else %>
              <!-- <li><a href="<%= new_user_session_path %>">Login</a></li> -->
            <li><%= link_to "Login/Registration", new_user_session_path %></li>
            <% end %>
          </ul>
        </div><!-- /.nav-collapse -->
      </div>
    </div>
  </div><!-- end header -->