<h1>Listing companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Services offered</th>
      <th>Brand offered</th>
      <th>Licenses</th>
      <th>Phones number</th>
      <th>Description</th>
      <th>Category</th>
      <th>Location</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.address %></td>
        <td><%= company.services_offered %></td>
        <td><%= company.brand_offered %></td>
        <td><%= company.licenses %></td>
        <td><%= company.phones_number %></td>
        <td><%= company.description %></td>
        <td><%= company.category_id %></td>
        <td><%= company.location_id %></td>
        <td><%= company.user_id %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

