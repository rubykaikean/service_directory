<h3><u>Categories List</u></h3>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>No.</th>
      <th>Name</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each_with_index do |category, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= category.name %></td>
        <td><%#= link_to 'Show', category %>
        <%= link_to 'Edit', edit_category_path(category), :class => "btn btn-info btn-mini" %>
        <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger btn-mini" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, :class => "btn" %>
